{
  "compilerOptions": {
    "noImplicitAny": true,
    "types": [],
    "experimentalDecorators": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "sourceMap": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "alwaysStrict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "target": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "jsx": "react",
    "removeComments": true,
  },
  "exclude": [
    "node_modules"
  ],
}